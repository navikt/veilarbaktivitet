<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <context-param>
        <param-name>springContekstKlasse</param-name>
        <param-value>no.nav.fo.veilarbaktivitet.ApplicationContext</param-value>
    </context-param>
    <listener>
        <listener-class>no.nav.apiapp.ApiAppServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>soapservlet</servlet-name>
        <servlet-class>no.nav.fo.veilarbaktivitet.ws.provider.ApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>soapservlet</servlet-name>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>All pages</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <resource-ref>
        <res-ref-name>jdbc/AktivitetDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


</web-app>
